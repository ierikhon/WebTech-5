div(id='modal' class='w3-modal')
    div(class='w3-modal-content')
        div(class='w3-container')
            div(class='w3-container')
                b Name
                input(type='text' class='w3-input' id='name_input')
                b URL
                input(type='text' class='w3-input' id='url_input')
                b Author
                input(type='text' class='w3-input' id='author_input')
                b Description
                textarea(class='w3-input' id='descr_input')
                b Start Price
                input(type='text' class='w3-input' id='sprice_input')
                b Minimal Step
                input(type='text' class='w3-input' id='minstep_input')
                b Maximal Step
                input(type='text' class='w3-input' id='maxstep_input')

                div(class='w3-container' align='center')
                    button(class='w3-btn w3-green w3-margin-bottom w3-margin-top') Saave changes
                    button(class='w3-btn w3-red w3-margin-bottom w3-margin-top' onclick='dismiss_modal()') Cancel
